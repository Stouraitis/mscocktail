<div class="new-cocktail">
<h4>Create a new cocktail</h4>

<%= link_to 'cancel', cocktails_path, data: { confirm: 'You want to cancel?'} %>

<%= simple_form_for @cocktail do |f| %>
<%= f.input :name %>
<%= f.input :photo_cache, as: :hidden %>
<%= f.input :photo, as: :attachinary %>
</div>
<%= f.submit %>
<% end %>
