s<h2><%= @cocktail.name %></h2>
<%  @cocktail.doses.each do |dose| %>
<p>
<%= dose.description %> <%= dose.ingredient.name %>
</p>
<% end %>


<p>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.input :description %>
<%= f.input :ingredient_id, as: :select, collection: @ingredients %>
<%= f.submit %>
<% end %>
</p>


<p>
  <%= link_to 'edit', edit_cocktail_path(@cocktail)%>
  <%= link_to 'remove', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?'} %>
</p>

<div>   <%= link_to 'new', new_cocktail_path%> </div>

 <p> <%= link_to 'return to index', cocktails_path %> </p>
